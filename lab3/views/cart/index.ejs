<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Giỏ Hàng Của Bạn</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">TMA Store</a>
            <div class="ms-auto">
                <a href="/products" class="btn btn-outline-light btn-sm">Tiếp tục mua sắm</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <h2 class="mb-4 text-primary"><i class="bi bi-cart3"></i> Giỏ Hàng</h2>

        <% if (cart && cart.items.length > 0) { %>
            <div class="row">
                <div class="col-md-8">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-0">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th>Giá</th>
                                        <th class="text-center">Số lượng</th>
                                        <th>Thành tiền</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% cart.items.forEach(item => { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="<%= item.url_image %>" alt="<%= item.name %>"
                                                         style="width: 50px; height: 50px; object-fit: cover;" class="rounded me-2">
                                                    <span class="fw-bold"><%= item.name %></span>
                                                </div>
                                            </td>
                                            <td>$<%= item.price.toLocaleString() %></td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm">
                                                    <a href="/cart/update/<%= item.productId %>/decrease" class="btn btn-outline-secondary">-</a>
                                                    <span class="btn btn-light disabled text-dark fw-bold" style="width: 40px;"><%= item.quantity %></span>
                                                    <a href="/cart/update/<%= item.productId %>/increase" class="btn btn-outline-secondary">+</a>
                                                </div>
                                            </td>
                                            <td class="fw-bold text-success">$<%= (item.price * item.quantity).toLocaleString() %></td>
                                            <td>
                                                <a href="/cart/remove/<%= item.productId %>" class="text-danger" title="Xóa">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">Tổng quan đơn hàng</h5>
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Tổng số lượng:</span>
                                <strong><%= cart.totalQuantity %></strong>
                            </div>
                            <div class="d-flex justify-content-between mb-4">
                                <span>Tạm tính:</span>
                                <span class="fs-4 fw-bold text-danger">$<%= cart.totalPrice.toLocaleString() %></span>
                            </div>
                           <form action="/order/checkout" method="POST">
                               <button type="submit" class="btn btn-primary w-100 py-2 fw-bold"
                                       onclick="return confirm('Xác nhận đặt hàng?')">
                                   TIẾN HÀNH THANH TOÁN
                               </button>
                           </form>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="bi bi-cart-x display-1 text-muted"></i>
                <h4 class="mt-3 text-muted">Giỏ hàng của bạn đang trống</h4>
                <a href="/products" class="btn btn-primary mt-3">Mua sắm ngay</a>
            </div>
        <% } %>
    </div>

</body>
</html>